<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="cliniquePU" transaction-type="RESOURCE_LOCAL">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- ✅ Classes JPA -->
    <class>org.example.clinique.entity.User</class>
    <class>org.example.clinique.entity.Doctor</class>
    <class>org.example.clinique.entity.Patient</class>
    <class>org.example.clinique.entity.Admin</class>
    <class>org.example.clinique.entity.Staff</class>
    <class>org.example.clinique.entity.Department</class>
    <class>org.example.clinique.entity.Specialty</class>
    <class>org.example.clinique.entity.Availability</class>
    <class>org.example.clinique.entity.Appointment</class>
    <class>org.example.clinique.entity.MedicalRecord</class>
    <class>org.example.clinique.entity.MedicalNote</class>
    <class>org.example.clinique.entity.WaitingListEntry</class>

    <properties>
      <!-- ✅ Connexion à la base PostgreSQL (via le réseau Docker) -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:postgresql://db:5432/clinique-db"/>
      <property name="jakarta.persistence.jdbc.user" value="clinique"/>
      <property name="jakarta.persistence.jdbc.password" value="clinique123"/>

      <!-- ✅ Paramètres Hibernate -->
      <!-- hibernate.dialect auto-détecté par Hibernate -->
      <property name="hibernate.connection.provider_class"
                value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.connection.characterEncoding" value="UTF-8"/>
    </properties>

  </persistence-unit>
</persistence>